<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap Css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- fontawasome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
    <title>Category Add</title>
</head>
<body>
    <div class="container">

       <form action="/category-add" method="post">
            <label for="" class="mt-5">Name</label>
            <input type="text" name="categoryname"  class="form-control">
            <br>
            <button type="submit" class="btn btn-primary text-light">Kaydet!</button>
       </form>
       
        <table class="table table-bordered table-hover text-center mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th class="text-uppercase">category name</th>
                    <th>UPDATE</th>
                    <th>DELETE</th>
                </tr>
            </thead>
            <tbody>
                <% model.forEach(m => { %>
                    <tr>
                        <td><%= m.Id %></td>
                        <td><%= m.categoryname %></td>
                        <td><a href="/category-update/<%= m.Id %>" class="btn btn-warning text-light">UPDATE</a></td>
                        <td><a href="/category-delete/<%= m.Id %>" class="btn btn-danger text-light">DELETE</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    
</body>
</html>